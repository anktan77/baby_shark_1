<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent"
    tools:context=".Login">
    <TextView
        android:id="@+id/textviewtitledangky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFC107"
        />

    <EditText
        android:text="anktan18@gmail.com"
        android:id="@+id/edittexttaikhoan"
        android:hint=" EMAIL"
        android:textColor="#FFC107"
        android:textColorHint="#CF9F3D"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewtitledangky"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:text="xanhau05"
        android:id="@+id/edittextmatkhau"
        android:inputType="textPassword"
        android:hint=" Mật khẩu"
        android:textColor="#FFC107"
        android:textColorHint="#CF9F3D"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittexttaikhoan"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnxacnhan"
        android:layout_centerHorizontal="true"
        android:text="Đăng nhập"
        android:textColor="#F1EFEE"
        android:layout_below="@+id/edittextmatkhau"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/createtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnxacnhan"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/quenmatkhau"
        android:text="Đăng ký"
        android:textColor="#f20"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/quenmatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnxacnhan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="137dp"
        android:text="Quên mật khẩu"
        android:textColor="#f20"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressbarlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quenmatkhau"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="181dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewLoginOwnerStadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbarlogin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="66dp"
        android:text="Đăng nhập với tư cách chủ sân"
        android:textColor="#f00"
        android:textSize="20sp" />

</RelativeLayout>