<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:id="@+id/cardViewInforAccount"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageViewUser"
        android:layout_marginTop="20dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        app:cardElevation="8dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="50dp">
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:outlineSpotShadowColor="#f00"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/chamthang"/>
            <TextView
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Thông tin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton

        android:id="@+id/buttonLogoutUser"
        style="@style/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViewInforAccount"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="420dp"
        android:text="Đăng xuất"
        app:initialCornerAngle="27dp"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textViewNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageViewUser"
        android:layout_toRightOf="@+id/imageViewUser"
        android:text="Tên"
        android:textSize="24sp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageViewUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/account" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/textviewPhoneUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNameUser"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewUser"
        android:text="số điện thoại"
        android:textSize="18sp"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/textViewEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewPhoneUser"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewUser"
        android:text="Email"
        android:textSize="18sp"/>


</RelativeLayout>