<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:srcCompat="@drawable/account" />
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textViewNTFName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đặt"
        android:layout_toRightOf="@+id/imageView"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textViewNTFPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewNTFName"
        android:text="số điện thoại"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textViewNTFDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ngày đá"
        android:layout_below="@+id/textViewNTFName"
        android:layout_toRightOf="@id/imageView"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textViewNTFTimeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="giờ bắt đầu"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@+id/textViewNTFDay"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textViewNTFTimeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="giờ kết thúc"
        android:layout_toRightOf="@id/textViewNTFTimeStart"
        android:layout_below="@id/textViewNTFDay"/>
    <Button
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/teal_700"
        android:id="@+id/buttonNTFConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chấp nhận"
        android:layout_below="@id/imageView"/>

    <Button
        android:backgroundTint="@color/teal_700"
        android:id="@+id/buttonNTFCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/buttonNTFConfirm"
        android:text="gọi" />

    <Button
        android:backgroundTint="@color/teal_700"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hủy"
        android:id="@+id/buttonNTFCancel"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@+id/buttonNTFCall"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/textViewNTFDescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:layout_toRightOf="@+id/textViewNTFDay"
        android:layout_above="@id/textViewNTFTimeEnd"/>
</RelativeLayout>